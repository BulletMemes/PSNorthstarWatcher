<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUITest"
        xmlns:Collections="clr-namespace:System.Collections;assembly=System.Runtime.Extensions"

        Title="MainWindow" Height="565" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="523*"/>
            <ColumnDefinition Width="277*"/>
        </Grid.ColumnDefinitions>
        <ComboBox Name="serverdropdown" IsSynchronizedWithCurrentItem="True" HorizontalAlignment="Left" Margin="81,42,0,0" VerticalAlignment="Top" Width="166" IsDropDownOpen="True" SelectedIndex="0" Grid.Column="1">
        </ComboBox>
        <Button Name="start" Content="Start Servers and Watcher" HorizontalAlignment="Left" Margin="96,502,0,0" VerticalAlignment="Top" BorderThickness="1,1,1,1" FontWeight="Bold" Grid.Column="1"/>
        <Label Content="Server count:" HorizontalAlignment="Left" Margin="158,16,0,0" VerticalAlignment="Top" Grid.Column="1"/>
		<Label Name="servercount" Content="0" HorizontalAlignment="Left" Margin="230,16,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button Name="buildservers" Content="Build servers" HorizontalAlignment="Left" Margin="176,435,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <GroupBox Header="Playlist Var Overrides" Margin="272,5,236,205" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="13*"/>
                    <ColumnDefinition Width="43*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Air Acceleration" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <Label Content="Round Score Limit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,25,0,0" Grid.ColumnSpan="2"/>
                <Label Content="Score Limit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,50,0,0" Grid.ColumnSpan="2"/>
                <Label Content="Time Limit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,75,0,0" Grid.ColumnSpan="2"/>
                <CheckBox Name="epilogue" Content="Epilogue / Evac" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,237,0,0" Grid.ColumnSpan="2"/>
                <CheckBox Name="boosts" Content="Boosts" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,217,0,0" />
                <Label Content="Max Players" HorizontalAlignment="Left" Margin="0,100,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <CheckBox Name="overridemaxplayers" Content="Override Playlists Max Players" HorizontalAlignment="Left" Margin="0,257,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <CheckBox Name="floorislava" Content="Floor is Lava" HorizontalAlignment="Left" Margin="0,277,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <TextBox Name="airacceleration" HorizontalAlignment="Left" Margin="52,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                <TextBox Name="roundscorelimit" HorizontalAlignment="Left" Margin="52,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                <TextBox Name="scorelimit" HorizontalAlignment="Left" Margin="52,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                <TextBox Name="timelimit" HorizontalAlignment="Left" Margin="52,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                <TextBox Name="maxplayers" HorizontalAlignment="Left" Margin="52,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                <Label Content="Pilot Health Multi." HorizontalAlignment="Left" Margin="0,125,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <TextBox Name="playerhealthmulti" HorizontalAlignment="Left" Margin="52,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                <CheckBox Name="aegisupgrade" Content="Aegis Upgrades" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="0,197,0,0" Grid.ColumnSpan="2"/>
                <CheckBox Name="classicmp" Content="Classic MP" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,177,0,0"  Grid.ColumnSpan="2"/>
                <CheckBox Name="playerbleed" Content="Player Bleed" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,157,0,0"  Grid.ColumnSpan="2"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="General Server Settings" Margin="10,5,256,254">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="83*"/>
                    <ColumnDefinition Width="162*"/>
                </Grid.ColumnDefinitions>
                <TextBox Name="Servername" HorizontalAlignment="Left" Margin="3,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                <Label Content="Server Name:" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <ComboBox Name="Gamemode" HorizontalAlignment="Left" Margin="3,27,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" Grid.Column="1">
                    <ComboBoxItem Content="tdm"/>
                    <ComboBoxItem Content="cp"/>
                    <ComboBoxItem Content="ctf"/>
                    <ComboBoxItem Content="lts"/>
                    <ComboBoxItem Content="ps"/>
                    <ComboBoxItem Content="ffa"/>
                    <ComboBoxItem Content="speedball"/>
                    <ComboBoxItem Content="mfd"/>
                    <ComboBoxItem Content="ttdm"/>
                    <ComboBoxItem Content="fra"/>
                    <ComboBoxItem Content="gg"/>
                    <ComboBoxItem Content="inf"/>
                    <ComboBoxItem Content="tt"/>
                    <ComboBoxItem Content="kr"/>
                    <ComboBoxItem Content="fastball"/>
                    <ComboBoxItem Content="arena"/>
                    <ComboBoxItem Content="ctf_comp"/>
                    <ComboBoxItem Content="attdm"/>
                </ComboBox>
                <Label Content="Game Mode:" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top"/>
                <TextBox Name="tcpport" HorizontalAlignment="Left" Margin="3,54,0,0" Text="8081" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                <TextBox Name="udpport" HorizontalAlignment="Left" Margin="3,79,0,0" Text="37015" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                <CheckBox Name="reporttomasterserver" Content="Report to master server" HorizontalAlignment="Left" Margin="0,130,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <CheckBox Name="softwared3d11" Content="softwared3d11" HorizontalAlignment="Left" Margin="0,150,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <CheckBox Name="allowinsecure" Content="Allow insecure" HorizontalAlignment="Left" Margin="0,170,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <CheckBox Name="returntolobby" Content="Return to lobby after match" HorizontalAlignment="Left" Margin="0,190,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <CheckBox Name="playercanchangemap" Content="Players can change map in lobby" HorizontalAlignment="Left" Margin="0,210,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <CheckBox Name="playercanchangemode" Content="Players can change mode in lobby" HorizontalAlignment="Left" Margin="0,230,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                
                <Label Content="TCP Port" HorizontalAlignment="Left" Margin="0,50,0,0" VerticalAlignment="Top"/>
                <Label Content="UDP Port" HorizontalAlignment="Left" Margin="0,75,0,0" VerticalAlignment="Top"/>
                <Label HorizontalAlignment="Left" Margin="26,186,0,0" VerticalAlignment="Top"/>

                <Label Content="Game Mode:" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <Label Name="pendingchanges" Content="Changes pending please rebuild" HorizontalAlignment="Left" Margin="66,460,0,0" VerticalAlignment="Top" Foreground="Red" Grid.Column="1"/>
        <Button Name="addserver" Content="Add Server" HorizontalAlignment="Left" Margin="185,70,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Slider Name="tickrate" HorizontalAlignment="Left" Margin="17,357,0,0" VerticalAlignment="Top" Width="753" SmallChange="1" IsSnapToTickEnabled="True" Maximum="128" Minimum="15" Value="60" TickPlacement="TopLeft" AutoToolTipPrecision="5" AutoToolTipPlacement="TopLeft" Grid.ColumnSpan="2"/>
        <Label Content="Server Tickrate" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,326,0,0"/>
    </Grid>
</Window>
